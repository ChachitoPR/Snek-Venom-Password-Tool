if length > 20:
    score += 1

print(f"Password length is {str(length)}, adding {str(score)} point(s)")

if sum(characters) > 1:
    score += 1

if sum(characters) > 2:
    score += 1

if sum(characters) > 3:
    score += 1

print(f"The password has {str(sum(characters))} different character types, adding {str(sum(characters) - 1)} point(s)")

if score == 0:
    print(f"Are you even trying? Score :{str(score)} /7")

if score == 1:
    print(f"This password is weak, re-adjust it or make a new one. Score: {str(score)} /7")

elif 3 < score < 1:
    print(f"This password needs some work! Score: {str(score)} /7")

elif score == 4:
    print(f"The password is on a good path, but can be adjusted to be better. Score: {str(score)} /7")

elif score == 5:
    print(f"The password is pretty good! Score: {str(score)} /7")

elif score == 6:
    print(f"The password is almost at it's full potential! Score: {str(score)} /7")

elif score > 6:
    print(f"this password is strong and secure! Score: {str(score)} /7")
