import string

password = input("Please enter the password you wish to test:")

upper_case = any([1 if c in string.ascii_uppercase else 0 for c in password])
lower_case = any([1 if c in string.ascii_lowercase else 0 for c in password])
special = any([1 if c in string.punctuation else 0 for c in password])
digits = any([1 if c in string.digits else 0 for c in password])

characters = [upper_case, lower_case, special, digits]

length = len(password)

score = 0

with open("PasswordList.txt") as f:
    common = f.read().splitlines()


if password in common:
    print("Password is too common and it will leave you vulnerable! Score 0/7")
    exit()


if length > 8:
    score += 1

if length > 12:
    score += 1

if length > 16:
    score += 1

if length > 20:
    score += 1

print(f"Password length is {str(length)}, adding {str(score)} point(s)")

if sum(characters) > 1:
    score += 1

if sum(characters) > 2:
    score += 1

if sum(characters) > 3:
    score += 1

print(f"The password has {str(sum(characters))} different character types, adding {str(sum(characters) - 1)} point(s)")

if score == 0:
    print(f"Are you even trying? Score :{str(score)} /7")

if score == 1:
    print(f"This password is weak, re-adjust it or make a new one. Score: {str(score)} /7")

elif 3 < score < 1:
    print(f"This password needs some work! Score: {str(score)} /7")

elif score == 4:
    print(f"The password is on a good path, but can be adjusted to be better. Score: {str(score)} /7")

elif score == 5:
    print(f"The password is pretty good! Score: {str(score)} /7")

elif score == 6:
    print(f"The password is almost at it's full potential! Score: {str(score)} /7")

elif score > 6:
    print(f"this password is strong and secure! Score: {str(score)} /7")
